<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/question_fragment_q_margin_l_r"
        android:layout_marginRight="@dimen/question_fragment_q_margin_l_r"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/question_fragment_a_margin_t"
            android:layout_height="wrap_content" />

        <com.yanxiu.gphone.student.customviews.ListenerSeekBarLayout
            android:id="@+id/lsb_listen"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/listen_url_margin_t_b"
            android:layout_marginBottom="@dimen/listen_url_margin_t_b"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>