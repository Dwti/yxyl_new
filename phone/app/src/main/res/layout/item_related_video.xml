<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_black_round_rectangle_6">

        <com.yanxiu.gphone.student.customviews.RoundedCornersImageView
            android:id="@+id/video_cover"
            android:layout_width="165dp"
            android:layout_height="95dp"
            android:background="@drawable/shape_black_round_rectangle_6"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/video_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_play_video" />

    <TextView
        android:id="@+id/video_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/shape_for_related_video"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:text="无理数"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_12" />

    </RelativeLayout>
