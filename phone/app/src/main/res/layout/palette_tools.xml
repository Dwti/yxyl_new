<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom">

    <com.yanxiu.gphone.student.questions.operation.view.SmallPenView
        android:id="@+id/smallPen"
        android:layout_width="12dp"
        android:layout_height="wrap_content" />

    <com.yanxiu.gphone.student.questions.operation.view.BigPenView
        android:id="@+id/bigPen"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paletteToosLeftMargin"/>

    <com.yanxiu.gphone.student.questions.operation.view.ColorFrameRelativeLayout
        android:id="@+id/straightLineLayout"
        android:layout_width="13dp"
        android:layout_height="65dp"
        android:layout_marginLeft="@dimen/paletteToosLeftMargin"
        app:frameVisible="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/straight_line"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </com.yanxiu.gphone.student.questions.operation.view.ColorFrameRelativeLayout>

    <com.yanxiu.gphone.student.questions.operation.view.ColorFrameRelativeLayout
        android:id="@+id/dottedLineLayout"
        android:layout_width="13dp"
        android:layout_height="65dp"
        android:layout_marginLeft="@dimen/paletteToosLeftMargin"
        app:frameVisible="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/dotted_line"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </com.yanxiu.gphone.student.questions.operation.view.ColorFrameRelativeLayout>


    <ImageView
        android:id="@+id/iv_eraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eraser_unuse"
        android:layout_marginLeft="@dimen/paletteToosLeftMargin"/>

    <com.yanxiu.gphone.student.questions.operation.view.CircleView
        android:id="@+id/currentColor"
        android:layout_width="37dp"
        android:layout_height="37dp"
        app:circle_style="ring"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/paletteToosLeftMargin"/>

</LinearLayout>