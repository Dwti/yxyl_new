<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_layout_height"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/selector_back"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="怎样加入班级？"
            android:textSize="20sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_edf0ee">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="26dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/icon_what_is_class"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="19sp"
                    android:text="什么是睿学堂班级"
                    android:layout_marginLeft="9dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="40dp"
                android:textColor="#666666"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="15dp"
                android:text="@string/what_is_class_1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="40dp"
                android:textColor="#666666"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="20dp"
                android:text="@string/what_is_class_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="26dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/icon_how_to_join"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="19sp"
                    android:text="怎样加入班级"
                    android:layout_marginLeft="9dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="40dp"
                android:textColor="#666666"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="15dp"
                android:text="@string/how_to_join_class_1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="40dp"
                android:textColor="#666666"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="20dp"
                android:text="@string/how_to_join_class_2"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>