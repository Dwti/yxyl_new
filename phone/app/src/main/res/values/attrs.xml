<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WavesLayout">
        <attr name="waves_alpha" format="integer" />
        <attr name="waves_alpha_step" format="integer" />
        <attr name="waves_framerate" format="integer" />
        <attr name="waves_duration" format="integer" />
        <attr name="waves_color" format="color" />
        <attr name="waves_animend_alpha" format="integer"/>
        <attr name="waves_canshowwave" format="boolean" />
        <attr name="waves_radius" format="dimension" />
        <attr name="waves_radius_top_left" format="dimension" />
        <attr name="waves_radius_top_right" format="dimension" />
        <attr name="waves_radius_bottom_left" format="dimension" />
        <attr name="waves_radius_bottom_right" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="choose_max_textsize" format="dimension"/>
        <attr name="choose_min_textsize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MyMaxHeightLinearLayout">
        <attr name="maxHeight" format="dimension"/>
        <attr name="minHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SinglineEditText">
        <attr name="hint" format="string"/>
        <attr name="hintTestSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="UserInfoHeadImageView">
        <attr name="textHeight" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textBgColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="text" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color"/>
        <attr name="circle_style" format="enum">
            <enum name="solid" value="0"/>
            <enum name="ring" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TrapezoidalView">
        <!--上底跟下底的比-->
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="ColorFrameRelativeLayout">
        <attr name="frameVisible" format="boolean"/>
    </declare-styleable>

</resources>